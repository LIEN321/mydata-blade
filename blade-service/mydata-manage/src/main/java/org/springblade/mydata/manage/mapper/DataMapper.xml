<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springblade.mydata.manage.mapper.DataMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="dataResultMap" type="org.springblade.mydata.manage.entity.Data">
        <id column="id" property="id"/>
        <result column="status" property="status"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="data_code" property="dataCode"/>
        <result column="data_name" property="dataName"/>
        <result column="data_count" property="dataCount"/>
    </resultMap>


    <select id="selectDataPage" resultMap="dataResultMap">
        select * from md_data where is_deleted = 0
    </select>

    <select id="selectDataStat" resultType="org.springblade.mydata.manage.dto.DataStatDTO">
        select
            count (*) as dataCount
            , SUM(IFNULL(data_count, 0)) as bizDataCount
        from md_data
        where is_deleted = 0
    </select>

</mapper>
